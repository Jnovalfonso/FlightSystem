<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlightSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlightSystem"
    xmlns:views="clr-namespace:FlightSystem.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="FlightSystem">

    
    <FlyoutItem Title="Dashboard" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home Page"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage"
            Icon="home.png"/>

        <ShellContent
            Title="Find Flights"
            ContentTemplate="{DataTemplate views:FindFlight}"
            Route="FindFlight" 
            Icon="flight.png"/>  

        <ShellContent
            Title="Reserve Flight"
            ContentTemplate="{DataTemplate views:Reserve}"
            Route="Reserve" 
            Icon="ticket.png"/>
        
        <ShellContent
            Title="About Us"
            ContentTemplate="{DataTemplate views:AboutUs}"
            Route="AboutUs" 
            Icon="about.png"/>
    </FlyoutItem>

</Shell>
